{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jutoku",
  "version": "0.1.0",
  "identifier": "com.jutoku.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Jutoku",
        "width": 800,
        "height": 600,
        "url": "main-index.html",
        "visible": false
      },
      {
        "label": "clock",
        "title": "time",
        "width": 200,
        "height": 100,
        "skipTaskbar": true,
        "decorations": false,
        "url": "clock-index.html",
        "visible": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
